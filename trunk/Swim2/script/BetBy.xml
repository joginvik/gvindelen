<Root>
  <!--Load Href="d:\swim2\reserv\BetBy.html" FileName="[Path.Lines]BetBy.html" Event="BeforeSave"/>
  <Exit/-->

  <!-- BetBy Перечень терниров -->
  <Download Href="http://bet.by/lines_set_turnir.php?period=all" FileName="[Path.Lines]BetBy.League.txt" Event="ExtractLeague" />
  <!-- BetBy Перечень событий -->
  <Download Href="http://bet.by/lines.php" FileName="[Path.Lines]BetBy.html" Event="BeforeSave">
    <ParamLoad FileName="[Path.Lines]BetBy.League.txt" />
    <ParamAdd Name="txtQuery" ValueFromFile="[Path.Lines]BetBy.txtQuery.txt" />
    <ParamAdd Name="period" Value="all" />
    <ParamAdd Name="stavka" Value="1" />
  </Download>
  <Exit/>

  <Event Name="ExtractLeague">
    <TakeBeginEnd Start="&lt;form" Contain1="frmTurnirs" End="&lt;/form&gt;" />
    <ExtractTags Start="&lt;input" Contain1="turnir_" End="&gt;" />
    <!-- Удаляем Бокс -->
    <DeleteAll Start="&lt;input" Contain1="sport_12" End="&gt;" />
    <!-- Удаляем Хоккей -->
    <DeleteAll Start="&lt;input" Contain1="sport_6" End="&gt;" />
    <DeleteAll Start="&lt;input" Contain1="sport_7" End="&gt;" />

    <ExtractTags Start="turnir" End="&quot;" />
    <ReplaceAll Text="&quot;" New=";" />
    <Save FileName="[Path.Lines]betby.txtQuery.txt" />
    <ReplaceAll Text=";" New="=on&#13;&#10;" />
  </Event>


  <Event Name="BeforeSave">
    <!-- Убираем пробелы -->
    <ReplaceAll Text="&amp;nbsp;" New=" " />
    <ReplaceAll Text="&amp;nbsp" New=" " />
    <ReplaceAll Text="&#150;" New="-" />
    <ReplaceAll Text="&#151;" New="-" />
    <ReplaceAll Text="&#9;" New=" " />
    <ReplaceAll Text="&CR;" New=" " />
    <ReplaceAll Text="&LF;" New=" " />
    <ReplaceAll Text="     " New=" " />
    <ReplaceAll Text="    " New=" " />
    <ReplaceAll Text="   " New=" " />
    <ReplaceAll Text="  " New=" " />
    <ReplaceAll Text=" &lt;" New="&lt;" />
    <ReplaceAll Text="&gt; " New="&gt;" />
    <ReplaceAll Text=" &gt;" New="&gt;" />
    <ReplaceAll Text="&gt;--&lt;" New="&gt;&lt;" />
     <!-- Убираем ссылки -->
    <DeleteAll Start="&lt;a " End="&gt;" />
    <DeleteAll Text="&lt;/a&gt;" />
    <!-- Убираем жирность  -->
    <DeleteAll Start="&lt;b " End="&gt;" />
    <DeleteAll Text="&lt;b&gt;" />
    <DeleteAll Text="&lt;/b&gt;" />
    <!-- Убираем лишние свойства -->
    <DeleteAll Text=" nowrap" />
    <DeleteAllAttribute Name="style" />
    <DeleteAllAttribute Name="class" />
    <DeleteAllAttribute Name="width" />
    <DeleteAllAttribute Name="height" />
    <DeleteAllAttribute Name="valign" />
    <!-- Убираем вложенные таблицы в датах -->
    <Foreach Start="&lt;h1" End="&lt;/h1&gt;">
      <ReplaceAll Start="&lt;span" End="&gt;" New=". " />
    </Foreach>
    <!-- Убираем Span -->
    <DeleteAll Start="&lt;span " End="&gt;" />
    <DeleteAll Text="&lt;span&gt;" />
    <DeleteAll Text="&lt;/span&gt;" />

    <ReplaceAll Start="&lt;td colspan=6&gt;&lt;table" End="&lt;tr&gt;&lt;td&gt;" New="&lt;td&gt;" />
    <ReplaceAll Text="&lt;/td&gt;&lt;/tr&gt;&lt;/table&gt;&lt;/td&gt;" New="&lt;/td&gt;" />
    <ReplaceAll Start="&lt;th colspan=6&gt;&lt;table" End="&lt;tr&gt;&lt;th&gt;" New="&lt;th&gt;" />
    <ReplaceAll Text="&lt;/th&gt;&lt;/tr&gt;&lt;/table&gt;&lt;/th&gt;" New="&lt;/th&gt;" />

    <TakeBeginEnd Start="&lt;table" Contain1="Дата" Contain2="Время" End="&lt;/table&gt;" />
  </Event>

</Root>