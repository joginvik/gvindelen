  <Event Name="ExtractLeagues">
    <ExtractTags Start="&lt;input" Contain1="catm[]" End="&gt;" Separator="&#13;&#10;" />
    <DeleteAll Start="&lt;" End="name=" />
    <DeleteAll Start="&quot;" End="&gt;" />
    <ReplaceAll Start="[]" End="&quot;" New="[]=" />
  </Event>


  <Event Name="BeforeSave">
    <ExtractTags Start="&lt;table" Contain1="Дома" End="&lt;/table&gt;" />
    <!-- Убираем пробелы -->
    <ReplaceAll Text="&amp;nbsp;" New=" " />
    <ReplaceAll Text="&amp;nbsp" New=" " />
    <ReplaceAll Text="&#150;" New="-" />
    <ReplaceAll Text="&#151;" New="-" />
    <ReplaceAll Text="&#9;" New=" " />
    <ReplaceAll Text="&CR;" New=" " />
    <ReplaceAll Text="&LF;" New=" " />
    <ReplaceAll Text="     " New=" " />
    <ReplaceAll Text="    " New=" " />
    <ReplaceAll Text="   " New=" " />
    <ReplaceAll Text="  " New=" " />
    <ReplaceAll Text=" &lt;" New="&lt;" />
    <ReplaceAll Text="&gt; " New="&gt;" />
    <ReplaceAll Text=" &gt;" New="&gt;" />
    <ReplaceAll Text="=&gt;" New="|" />
    <!-- Убираем коментарии --> 
    <DeleteAll Start="&lt;!--" End="--&gt;" />
    <!-- Убираем инпуты -->
    <DeleteAll Start="&lt;input " End="&gt;" />
    <!-- Убираем ссылки -->
    <DeleteAll Start="&lt;a " End="&gt;" />
    <DeleteAll Text="&lt;/a&gt;" />
    <!-- Убираем жирность  -->
    <DeleteAll Start="&lt;b " End="&gt;" />
    <DeleteAll Text="&lt;b&gt;" />
    <DeleteAll Text="&lt;/b&gt;" />
    <!-- Убираем скрипты -->
    <DeleteAll Start="&lt;script " End="&lt;/script&gt;" />
    <!-- Убираем картинки -->
    <DeleteAll Start="&lt;img " End="&gt;" />
    <!-- Убираем Strong  -->
    <DeleteAll Text="&lt;strong&gt;" />
    <DeleteAll Text="&lt;/strong&gt;" />
    <!-- Меняем <br> на | -->
    <ReplaceAll Text="&lt;br&gt;" New="|" />
    <!-- Убираем лишние свойства -->
<!--    <DeleteAllAttribute Name="bgcolor" /
    <DeleteAllAttribute Name="align" />
    <DeleteAllAttribute Name="valign" />
    <DeleteAllAttribute Name="width" /-->
    <ReplaceAll Text="&gt;-&lt;" New="&gt;&lt;" />
  </Event>
</Root>
