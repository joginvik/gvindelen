    <DeleteAll Start="&lt;tr&gt;" Contain1="1)ЖК " Contain2="2)ЖК " End="&lt;/tr&gt;" />
    <DeleteAll Start="&lt;tr&gt;" Contain1="1)угл " Contain2="2)угл " End="&lt;/tr&gt;" />
    <DeleteAll Start="&lt;tr&gt;" Contain1="colspan=13" End="&lt;/tr&gt;" />
    <!-- Патчим наименования -->
    <ReplaceAll Text="Чемпионат" New=" Чемпионат " />
    <ReplaceAll Text="Кубок" New=" Кубок " />
    <ReplaceAll Text="Женщины" New=" Женщины. " />
    <ReplaceAll Text="Мужчины" New=" Мужчины. " />
    <ReplaceAll Text="ЧМ" New=" ЧМ" CaseSensitive="1" />
    <ReplaceAll Text="Европы" New=" Европы " />
