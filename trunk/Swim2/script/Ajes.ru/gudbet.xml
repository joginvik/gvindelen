    <!-- Убираем жирность  -->
    <DeleteAll Start="&lt;b " End="&gt;" />
    <DeleteAll Text="&lt;b&gt;" />
    <DeleteAll Text="&lt;/b&gt;" />
    <!-- Убираем S  -->
    <DeleteAll Text="&lt;s&gt;" />
    <DeleteAll Text="&lt;/s&gt;" />
    <!-- Убираем скрипты -->
    <DeleteAll Start="&lt;script " End="&lt;/script&gt;" />
    <!-- Убираем форму -->
    <DeleteAll Start="&lt;form " End="&gt;" />
