CREATE TABLE BANDS (
    BAND_ID    ID_BAND NOT NULL /* ID_BAND = INTEGER */,
    BLOCK_ID   ID_BLOCK NOT NULL /* ID_BLOCK = INTEGER */,
    BAND_SIGN  SIGN_BAND /* SIGN_BAND = VARCHAR(4) NOT NULL */
);
ALTER TABLE BANDS ADD CONSTRAINT PK_BANDS PRIMARY KEY (BAND_ID);
ALTER TABLE BANDS ADD CONSTRAINT FK_BANDS_BAND_REF FOREIGN KEY (BAND_SIGN) REFERENCES BAND_REF (BAND_SIGN) ON UPDATE CASCADE;

ALTER TABLE BANDS ADD CONSTRAINT FK_BANDS_BLOCK FOREIGN KEY (BLOCK_ID) REFERENCES BLOCKS (BLOCK_ID) ON DELETE CASCADE ON UPDATE CASCADE;
